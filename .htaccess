<IfModule mod_rewrite.c>
RewriteEngine On

# Redirección a HTTPS
RewriteCond %{HTTP_HOST} ^teampcmx\.com [NC]
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://teampcmx.com/$1 [R,L]

# Quitar .php
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)$ $1.php [L]

# Quitar .html
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)$ $1.html [L]

# Permitir acceso directo a archivos existentes (como index.html en subcarpetas)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Páginas de error personalizadas
ErrorDocument 404 /cotizador-web-pisuena/error/404.html
ErrorDocument 403 /cotizador-web-pisuena/error/403.html
ErrorDocument 500 /cotizador-web-pisuena/error/500.html

</IfModule>
